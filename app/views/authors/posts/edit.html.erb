
<div class="row">
    <div class="col-md-3">
        <%= link_to 'Back', posts_path, class: 'btn btn-secondary mb-3' %>
        <div clas="card">
            <div class="card-body">
                <h4 class="card-title">Editing Blog</h4>
                <%= render 'form', post: @post %>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="mb-3">
            <%= form_with(model: [@post, @paragraph]) do |form| %>
                <%= form.hidden_field :element_type, value: 'paragraph' %>
                <%= form.submit "Paragraph", class: 'btn btn-primary'%>
            <% end%>
        </div>
        <div class="card">
            <div class="card-body">
                <% @post.elements.each do |element| %>
                    <% if element.persisted? %>
                        <%= form_with(model: [@post, element]) do |form| %>
                            <%= form.rich_text_area :content %>
                            <%= form.submit "Save", class: 'btn btn-primary mt-3'%>
                        <% end%>
                    <%end %>
                <%end %>
            </div>
        </div>

    </div>
</div>







